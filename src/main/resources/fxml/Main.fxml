<AnchorPane fx:id="root" prefHeight="401.0" prefWidth="656.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">
    <children>
        <TextArea fx:id="inputTextArea" focusTraversable="false" layoutX="95.0" layoutY="172.0" prefHeight="191.0" prefWidth="433.0" promptText="with" wrapText="true" />
        <Button fx:id="encodeTrigger" focusTraversable="false" layoutX="470.0" layoutY="56.0" mnemonicParsing="false" onAction="#triggerEncoding" prefHeight="29.0" prefWidth="103.0" text="ENCODE" />
        <Button fx:id="triggerDecoding" focusTraversable="false" layoutX="470.0" layoutY="113.0" mnemonicParsing="false" onAction="#triggerDecoding" prefHeight="29.0" prefWidth="103.0" text="DECODE" />
      <Button layoutX="41.0" layoutY="58.0" mnemonicParsing="false" onAction="#saveToFile" prefHeight="25.0" prefWidth="54.0" text="Save" />
      <Button layoutX="41.0" layoutY="113.0" mnemonicParsing="false" onAction="#loadFromFile" prefWidth="54.0" text="Load" />
    </children>
</AnchorPane>
